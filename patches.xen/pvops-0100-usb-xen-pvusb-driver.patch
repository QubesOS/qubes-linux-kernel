+static inline int count_pages(void *addr, int length)
+{
+	unsigned long start = (unsigned long) addr >> PAGE_SHIFT;
+	unsigned long end = (unsigned long)
+				(addr + length + PAGE_SIZE - 1) >> PAGE_SHIFT;
+	return end - start;
+}
